<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.example.autosleep</string>

    <key>ProgramArguments</key>
    <array>
        <string>/path/to/auto_sleep.sh</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>StartInterval</key>
    <integer>60</integer>

    <key>EnvironmentVariables</key>
    <dict>
        <key>IDLE_TIME</key>
        <string>900</string> <!-- Default idle time; can be customized -->
    </dict>

    <key>StandardErrorPath</key>
    <string>/tmp/autosleep.err</string>

    <key>StandardOutPath</key>
    <string>/tmp/autosleep.out</string>
</dict>
</plist>